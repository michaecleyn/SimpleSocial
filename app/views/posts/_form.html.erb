<%= form_for Post.find(params[:id]) do |f| %>
	<%= f.label :status, "Tweet" %>
	<%= f.text_field :status %>

	<%= f.label :scheduled_at, "Scheduled At" %>
	<%= f.text_field :scheduled_at, class: "datetimepicker" %>

	<%= f.submit "submit" %>
<% end %>

<script>
		$(function(){
  			jQuery('.datetimepicker').datetimepicker();
		});
</script>
