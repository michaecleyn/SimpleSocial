<input class="btn btn-primary form-control datetimepicker" type="text" name="date" placeholder="Schedule For Later">
	<script>
		$(function(){
  			jQuery('.datetimepicker').datetimepicker({
		  		onClose:function(dp,$input){
    				if ($input.val().length > 0) {
    					$input.closest("form").submit()
    				}
  				}
  			});
		});
	</script>
