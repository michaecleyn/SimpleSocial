<div class="container">
	<% if flash[:notice] %>
    <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>

	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-info">
				<div class="panel-heading">
    				<h3 class="panel-title">Add a New Website Feed</h3>
  			</div>
 			 	<div class="panel-body">
					<%= bootstrap_form_for @url do |f| %>
						<%= f.text_field :url, placeholder: "Enter a valid RSS feed", skip_label: true %>
						<% ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"].each do |dow| %>
						<div class="col-md-3">
							<%= f.check_box dow %>
						</div>
						<% end %>
						<%= f.submit "Save Feed", class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>

		<div class="col-md-6">
			<div class="panel panel-info">
				<div class="panel-heading">
	    			<h3 class="panel-title">Your Saved Website Feeds</h3>
	  		</div>

	 			 <div class="panel-body">

					<table class="table table-hover">
						<% current_user.urls.each do |url| %>
						<tr>
							<td><%= url.url %></td>
								<td><%= link_to 'Schedule', edit_url_path(url) %></td>
							</tr>
						<% end %>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

